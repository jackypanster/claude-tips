{
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true,
    "example-skills@anthropic-agent-skills": true,
    "file-organizer@awesome-claude-skills": true,
    "plugin-dev@claude-code-plugins": true,
    "content-research-writer@awesome-claude-skills": true,
    "dev-browser@dev-browser-marketplace": true,
    "skill-creator@awesome-claude-skills": true
  },
  "alwaysThinkingEnabled": true,
  "permissions": {
    "additionalDirectories": [
      "~/workspace",
      "~/Documents",
      "~/Downloads",
      "~/.config",
      "~/.local/share",
      "~/.cache"
    ],
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Grep",
      "Glob"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/.env.local)",
      "Read(**/secrets/**)",
      "Read(**/credentials/**)",
      "Read(**/*secret*)",
      "Read(**/*password*)",
      "Read(**/*credential*)",

      "Read(~/.ssh/**)",
      "Read(~/.gnupg/**)",
      "Read(~/.aws/**)",
      "Read(~/.gcloud/**)",
      "Read(~/.azure/**)",
      "Read(~/.kube/config)",
      "Read(~/.netrc)",
      "Read(~/.docker/config.json)",

      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.p12)",
      "Read(**/*.pfx)",
      "Read(**/*_rsa)",
      "Read(**/*_ed25519)",
      "Read(**/*_ecdsa)",

      "Read(**/id_rsa*)",
      "Read(**/id_ed25519*)",
      "Read(**/*.keystore)",
      "Read(**/*.jks)",

      "Write(~/.ssh/**)",
      "Write(~/.gnupg/**)",
      "Write(~/.aws/**)",
      "Edit(**/.env*)"
    ]
  }
}
